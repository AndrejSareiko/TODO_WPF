<Window x:Class="TODO.EditPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TODO"
        mc:Ignorable="d"
        Title="EditPage" Height="300" Width="300">
    <Grid>
        <TextBlock HorizontalAlignment="Center" Margin="0,20,0,0" TextWrapping="Wrap" Text="Edit" VerticalAlignment="Top" FontSize="20" FontWeight="Bold"/>
        <TextBlock HorizontalAlignment="Left" Margin="64,102,0,0" TextWrapping="Wrap" Text="Task: " VerticalAlignment="Top" FontSize="18"/>
        <TextBox x:Name="editTaskText" HorizontalAlignment="Left" Margin="112,102,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" FontSize="18"/>
        <Button x:Name="btnEdit" Content="Update" HorizontalAlignment="Center" Margin="0,210,0,0" VerticalAlignment="Top" Width="150" Click="btnEdit_Click"/>
    </Grid>
</Window>
