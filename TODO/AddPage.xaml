<Window x:Class="TODO.AddPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TODO"
        mc:Ignorable="d"
        Title="AddPage" Height="300" Width="300">
    <Grid>
        <TextBlock HorizontalAlignment="Center" Margin="0,20,0,0" TextWrapping="Wrap" Text="Add Task" VerticalAlignment="Top" FontSize="20" FontWeight="Bold"/>
        <TextBlock HorizontalAlignment="Left" Margin="38,102,0,0" TextWrapping="Wrap" Text="New task: " VerticalAlignment="Top" FontSize="18"/>
        <TextBox x:Name="newTaskText" HorizontalAlignment="Left" Margin="124,102,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="140" FontSize="18"/>
        <Button x:Name="btnAddTask" Content="Add" HorizontalAlignment="Center" Margin="0,210,0,0" VerticalAlignment="Top" Width="150" Click="btnAddTask_Click"/>
    </Grid>
</Window>
